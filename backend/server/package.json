{
	"name": "rewind",
	"version": "1.0.0",
	"description": "Social media app for music lovers",
	"main": "index.js",
	"scripts": {
		"start": "cross-env NODE_ENV=development nodemon dist/app.js",
		"dev:prod": "tsc & cross-env NODE_ENV=development node dist/app.js",
		"dev:test": "cross-env NODE_ENV=test node dist/app.js",
		"lint": "eslint --ext .ts --config .eslintrc.json ./server/**/*.ts",
		"lint:fix": "eslint --ext .ts --config .eslintrc.json ./server/**/*.ts --fix",
		"prettier:check": "prettier --check **/*.{js,jsx,ts,tsx,json} --ignore-path .gitignore",
		"prettier:format": "prettier --write **/*.{js,jsx,ts,tsx,json} --ignore-path .gitignore",
		"server-lock": "netstat -punta | grep 3000 \n echo \"Now use kill -9 <pid>\"",
		"pretest": "docker compose up -d --build",
		"test": "cross-env NODE_ENV=test MONGO_INITDB_ROOT_PASSWORD=secret MONGO_INITDB_ROOT_USER=root VERSION='1.0.0' JWT_SECRET='somesecret' jest --coverage --maxWorkers 1 ",
		"posttest": "docker compose down",
		"test:nocoverage": "cross-env NODE_ENV=test jest",
		"echo": "echo '\u001b[32mPrettier file formatting Completed\u001b[0m'"
	},
	"author": "Rewind",
	"license": "ISC",
	"dependencies": {
		"@socket.io/mongo-adapter": "^0.3.0",
		"axios": "^1.3.4",
		"body-parser": "^1.20.2",
		"chai-http": "^4.3.0",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"fs": "^0.0.1-security",
		"http": "^0.0.1-security",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^7.0.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"node-cron": "^3.0.2",
		"qs": "^6.11.1",
		"socket.io": "^4.6.1",
		"supertest": "^6.3.3",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@jest/globals": "^29.5.0",
		"@swc/jest": "^0.2.26",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/morgan": "^1.9.4",
		"@types/multer": "^1.4.7",
		"@types/node-cron": "^3.0.7",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"eslint": "^8.36.0",
		"jest": "^29.5.0",
		"nodemon": "^2.0.21",
		"prettier": "^2.8.7",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
}
